// NextJs TsConfig
{
  "include": [
    "eslint.config.mjs",
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    "**/*.cjs",
    "**/*.js", 
    ".next/types/**/*.ts",
    "src/utils/env.js",
  ],

  "exclude": ["node_modules"],

  "compilerOptions": {
    /* Type Checking */
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    }, 
    "resolveJsonModule": true,

    /* Emit */
    "noEmit": true,

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": true,

    /* Editor Support */
    "plugins": [
      {
        "name": "next"
      }
    ],
    
    /* Interop Constraints */
    "esModuleInterop": true,
    "isolatedModules": true,

    /* Language and Environment */
    "lib": ["ES2022", "dom", "dom.iterable"],
    "target": "ES2022",
    "jsx": "preserve",
    "moduleDetection": "force",

    /* Projects */
    "incremental": true,

    /* Completedness */
    "skipLibCheck": true
  }
}
